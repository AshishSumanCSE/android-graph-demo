<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

  <data>

  </data>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="none"
      >

    <LinearLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity"
        >
      <com.mindorks.RadialProgressBar
          android:id="@+id/radialChart"
          android:layout_width="200dp"
          android:layout_height="200dp"
          />
      <com.example.androidgraph.FilledLineChart
          android:id="@+id/lineChart"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:layout_marginTop="50dp"
          />
      <com.example.androidgraph.CustomBarChart
          android:id="@+id/barChart"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:layout_marginTop="50dp"
          />
      <com.example.androidgraph.SmoothLineChart
          android:id="@+id/smoothLineChart"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:layout_marginTop="50dp"
          android:layout_marginBottom="30dp"
          />
    </LinearLayout>

  </ScrollView>
</layout>